{
	"packages": [
		"packages/*"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://github.com/seed-blocks/seedblocks"
	},
	"version": "independent",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"ignoreChanges": [
		"**/__tests__/**",
		"**/*.md"
	],
	"command": {
		"publish": {
			"conventionalCommits": true,
			"allowBranch": [
				"master",
				"next"
			],
			"message": "chore(release): Publish"
		}
	}
}
