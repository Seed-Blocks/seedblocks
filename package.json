{
	"private": "true",
	"author": {
		"name": "Praney Behl @praneybehl",
		"email": "praneybehl@gmail.com"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"scripts": {
		"postinstall": "patch-package",
		"test": "jest",
		"test:all": "yarn lint && yarn build && yarn type-check && yarn test && yarn website:build && yarn clean && yarn website:serve",
		"coverage": "yarn test --coverage",
		"postcoverage": "open-cli coverage/lcov-report/index.html",
		"type-check": "tsc --noEmit",
		"lint": "eslint --ext js,ts,tsx .",
		"storybook": "start-storybook -p 6006",
		"storybook:build": "build-storybook",
		"clean": "lerna exec --scope @seedblocks/* -- yarn clean",
		"build": "lerna exec --scope @seedblocks/* --concurrency 1 -- yarn build",
		"build:fast": "yarn build -- -- --no-umd",
		"docs": "lerna exec --scope @seedblocks/* --concurrency 1 -- yarn docs",
		"website": "lerna exec --scope website -- yarn start",
		"website:build": "lerna exec --scope website -- yarn build",
		"website:serve": "lerna exec --scope website -- yarn serve",
		"prerelease": "patch-package",
		"release": "lerna publish",
		"changelog": "lerna-changelog",
		"commit": "git-cz",
		"setup": "lerna bootstrap",
		"refresh:modules": "rimraf ./**/node_modules && yarn setup"
	},
	"husky": {
		"hooks": {
			"commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts,tsx": [
			"tsc --noEmit"
		],
		"*.{js,ts,tsx}": [
			"eslint --ext js,ts,tsx --fix",
			"git add"
		],
		"{README,CHANGELOG}.md": [
			"scripts/copy-statics.sh"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-lerna-changelog"
		}
	},
	"devDependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.12.3",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-object-rest-spread": "^7.12.1",
		"@babel/plugin-proposal-optional-chaining": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-react": "^7.12.5",
		"@babel/preset-typescript": "^7.12.1",
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@rollup/plugin-babel": "^5.2.1",
		"@rollup/plugin-commonjs": "^16.0.0",
		"@rollup/plugin-node-resolve": "^10.0.0",
		"@rollup/plugin-replace": "^2.3.4",
		"@storybook/react": "^6.0.28",
		"@testing-library/dom": "^7.26.5",
		"@testing-library/jest-dom": "^5.11.5",
		"@testing-library/react": "^11.1.1",
		"@testing-library/react-hooks": "^3.4.2",
		"@textlint/markdown-to-ast": "^6.2.5",
		"@types/jest": "^26.0.15",
		"@types/jest-axe": "^3.5.1",
		"@types/prop-types": "^15.7.3",
		"@types/react-dom": "^16.9.9",
		"@types/vfile-message": "^2.0.0",
		"@types/wordpress__jest-console": "^3.0.4",
		"@typescript-eslint/eslint-plugin": "^4.6.1",
		"@typescript-eslint/parser": "^4.6.1",
		"@wordpress/jest-console": "^3.9.0",
		"ast-to-markdown": "^1.0.0",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.1.0",
		"babel-plugin-macros": "^2.8.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"chalk": "^4.1.0",
		"cross-spawn": "^7.0.3",
		"documentation": "^13.1.0",
		"eslint": "^7.13.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-import-resolver-babel-module": "^5.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.0",
